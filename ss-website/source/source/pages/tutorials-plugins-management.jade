include ../modules/head/head
include ../modules/footer/footer
include ../modules/browsehappy/browsehappy
include ../modules/header-inner/header-inner
include ../modules/sidebar/sidebar
include ../modules/page-title/page-title
include ../modules/demo/demo
include ../modules/accordion/accordion
include ../modules/analytics/analytics


doctype html
html(class="no-js" lang="en")

	head
		+head()

	body.page.page_background-gray
		+browsehappy(browsehappy)

		.page__header
			+header-inner()

		.page-docs

			.page-docs__content
				//-+demo()
				+sidebar('tutorials.html')

				.content-wrapper

					+page-title({"title": "Tutorials: Plugins management"})

					section
						p
						+accordion()

							+accordion-item({"title": "1\) Appscale plugins installation", "open": true, "id": "PluginAppScaleInstall"})
								iframe(width="100%" height="450" src="https://www.youtube.com/embed/THsmIdPEkT0?version=3&enablejsapi=1" frameborder="0" allowfullscreen)

							+accordion-item({"title": "2\) Appscale running application", "id": "AppScaleUse"})
								iframe(width="100%" height="450" src="https://www.youtube.com/embed/tP2gMy7WVyA?version=3&enablejsapi=1" frameborder="0" allowfullscreen)

							+accordion-item({"title": "3\) Generic Plugin Demo", "id": "PluginGeneric"})
								iframe(width="100%" height="450" src="https://www.youtube.com/embed/IW3oEP_Qs8k?version=3&enablejsapi=1" frameborder="0" allowfullscreen)

			.page__footer
				+footer()

			.clear

		//- Scripts
		script(src='js/plugins.min.js')
		script(src='js/main.min.js')
		+analytics()
