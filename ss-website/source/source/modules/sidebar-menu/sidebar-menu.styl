.sidebar-menu
	//

	ul-reset()

	&__title
		margin 0
		padding 10px 20px
		font-size 18px
		border-bottom 1px solid #dadada

	&__item
		font-size 16px
		padding 0 0 0 0
		list-style none
		color: #fff;
		position: relative;

	&__link
		color: #fff;

		&
		&:visited
			color: #fff;
			display block
			padding 8px 0 0 25px
			text-decoration none
		&:hover
			color: #fff;
			text-decoration underline

	&__submenu
		padding 0 20px 0 27px
		display: none;
		.sidebar-menu__item
			font-size 14px

		.sidebar-menu__link

			&
			&:visited
				line-height normal
	&__arrow
		position: absolute;
		right: 10px;
		top: 13px;
		font-size: 14px;
		transition 125ms all ease-in-out

	&__item_active &__submenu
		display: block;

	&__item_active &__arrow
		transform: rotate(90deg)