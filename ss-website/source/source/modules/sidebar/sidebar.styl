.sidebar
	background-color: #404651;
	min-height: 100%;
	width: 300px;
	position: absolute;
	top: 0;
	left: -300px;
	z-index: 2;
	padding: 50px 35px 0 10px;
	box-sizing: border-box;
	+below($media-screen-xs)
		float: none;
		position: absolute;
		top: 0;
		left: -300px;
		height: 100%;
		overflow-y: auto;

	&__mobile-icon
		display: none;
		position: absolute;
		width: 30px;
		height: 30px;
		right: 5px;
		top: 50%;
		margin-top: -15px;
		color: #fff;
		font-size: 25px;
		transform: rotate(90deg);
		text-align: center;
		+below($media-screen-xs)
			display: block;

