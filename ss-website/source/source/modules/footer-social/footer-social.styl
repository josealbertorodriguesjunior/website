.footer-social
	padding: 0 0 0 0;
	margin: 0 0 0 0;

	&__item
		float: left;
		padding: 0 23px 0 0;
		margin: 0 0 0 0;
		list-style: none;
		+below($media-screen-xs)
			padding 0 10px 0 0
		&:last-child
			padding-right: 0;

	&-item
		display: inline-block;
		text-decoration: none;
		font-size 14px
		color #303644

		&:hover
			opacity: 0.8;

