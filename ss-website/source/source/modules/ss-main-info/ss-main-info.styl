.ss-main-info
	position: relative;
	background-image: url(../img/ss-info-img.png);
	background-repeat: no-repeat;
	background-position: 50% 100%;
	+below($media-screen-xs)
		background-size contain
	+hd(anti-overlap: true)
		background-size: 40%;

	&__text
		width: 570px;
		margin: 0 auto;
		position: relative;
		height: 100%;
		+below($media-screen-sm)
			height 700px
		+below($media-screen-xs)
			width auto

	&-text
		color: gray
		text-align: center;
		position: absolute;
		top: 15%;
		left: 0;
		+below($media-screen-xs)
			position relative
			top 0
			padding 20px 20px 120px
		+hd(anti-overlap: true)
			top: 20%;

		&__title
			font-size: 22px;
			line-height: 34px;
			padding: 0 0 20px 0;
			margin: 0 0 0 0;

		&__text
			font-size: 16px;
			line-height: 34px;
			padding: 0 0 20px 0;
			margin: 0 0 0 0;
			text-align: left;
			+below($media-screen-xs)
				padding 0

