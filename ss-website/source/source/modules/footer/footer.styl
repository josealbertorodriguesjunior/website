.footer
	background #fff

	&__inner
		padding 18px 0 18px 0
		max-width 960px
		margin 0 auto
		position: relative;
		+below($media-screen-sm)
			padding 18px 20px
	&__menu
		float: left;
		+below($media-screen-xs)
			display none
	&__social
		float: right;

	&__arrow
		position: absolute;
		top: 50%
		left: 50%
		margin: -16px 0 0 -16px;

	&__copyright
		//

.to-top-arrow
	width: 32px;
	height: 32px;
	cursor: pointer;
	display: inline-block;
	background-image: url(../img/to-top-arrow.png);
	background-position: 0 0;
	background-repeat: no-repeat;

