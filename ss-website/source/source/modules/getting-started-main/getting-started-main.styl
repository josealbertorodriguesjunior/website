.getting-started-main
	position: relative;
	height: 320px;
	background-color: #303644
	display: flex;
	flex-direction: column;
	justify-content: center;
	+below($media-screen-sm)
		height auto

	&_inner
		height: 200px;

	&__info
		max-width: 570px;
		margin: 0 auto;
		position: relative;
		height: 100%;
		+below($media-screen-sm)
			padding 20px

	&_inner &__info
		max-width: 960px;
		display: flex;
		flex-direction: column;
		justify-content: center;

	&-info
		color: white
		text-align: center;
		&__button
			padding: 0 0 15px 0;
			
			& .button_circle
				border-radius 50px;
				width 70px;
				height 70px;
				line-height 65px
				font-size 30px;
				margin 0 25px 0 0px
				position relative
				.text
					position: absolute;
					bottom: -30px;
					left: 0;
					right: 0;
					font-size: 16px;
					margin: bottom;
					line-height: normal;

			& .in-progress
				background-color #ccc
				border-color #ccc
				position relative
				span
					font-size: 10px;
					font-weight: 700;
					line-height: 12px;
					position: absolute;
					top: -10px;
					left: 60px;
					background-color: #266cd3;
					text-align: center;
					color: #fff;
					padding: 4px;
					border-top-left-radius: 4px;
					border-bottom-right-radius: 4px;
					border-top-right-radius: 4px;
		&__img
			max-width 100%


		&__title
			font-size: 22px;
			line-height: 34px;
			padding: 0 0 15px 0;
			margin: 0 0 0 0;
			color: white

		&__text
			font-size: 16px;
			line-height: 34px;
			padding: 0 0 15px 0;
			margin: 0 0 0 0;
			&-install
				font-size 20px
			&_note
				line-height: 20px;
				font-size: 14px;
				border: 1px solid #222;
				padding: 10px;
				margin-top: 0;
			&_caution
				line-height: 20px;
				font-size: 14px;
				font-weight 600
				border: 1px solid red;
				padding: 10px;
				margin-top: 0;
