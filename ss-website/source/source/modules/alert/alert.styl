// Mixins
alert-style( color )
	border 1px solid color + 50%
	background color + 90%
	.alert
		&__title
		&__close
		&__body
			color color - 20%

		&__close
			svg
				fill color
			&:hover
				svg
					fill color - 40%

.alert
	display block
	padding 10px 15px
	border-radius 2px
	position relative
	margin-bottom $base-line-height

	&__title
		font-weight bold
		font-size 16px
		padding-bottom 8px

	&__body
		font-size 14px

	&__close
		font-weight bold
		text-align center
		position absolute
		right 5px
		top 5px
		cursor pointer
		size 16px
		padding 3px
		line-height 1
		&:hover
			border-radius 2px
		svg
			size 10px





.alert_type_error
.alert_color_red
	alert-style(color = #e74c3c)

.alert_type_success
.alert_color_green
	alert-style(color = #187818)

.alert_type_info
.alert_style_blue
	alert-style(color = #00529c)

.alert_type_message
.alert_color_grey
	alert-style(color = #000)
